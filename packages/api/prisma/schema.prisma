generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserStatus {
  ACTIVE
  INACTIVE
  PENDING
  BLOCKED
}

model User {
  id         String     @id @default(cuid())
  first_name String
  last_name  String?
  email      String
  password   String?
  status     UserStatus @default(PENDING)
  avatar     String?
  created_at DateTime?  @default(now())
  updated_at DateTime?  @default(now())
}
